
%h2 Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .registration_edit-top
    .registration_edit-list
      = f.label :name
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name"
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    = f.label :image, class:"registration_edit-image" do
      = f.file_field :image, class: "image-file"
      = image_tag current_user.image.url ,class: "file-image"
  
  = f.label :text
  %br/
  = f.text_area :text, autofocus: true, autocomplete: "text", rows:10
  = f.label :current_password
  %i (we need your current password to confirm your changes)
  %br/
  = f.password_field :current_password, autocomplete: "current-password"
  = f.submit "Update"
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
